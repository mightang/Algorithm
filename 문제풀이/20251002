#2025.10.02.
#20300: 서강근육맨
https://www.acmicpc.net/problem/20300


#include <iostream>
#include <algorithm>
#include <cmath>
using namespace std;

int n;
unsigned long long t[10002];

int main(void) {
	cin.tie(0);
	ios::sync_with_stdio(false);

	cin >> n;
	for (int i = 0; i < n; i++) {
		cin >> t[i];
	}
	sort(t, t + n);

	unsigned long long mx = 0;
	if (n % 2 == 0) {
		for (int i = 0; i < n / 2; i++) {
			unsigned long long sum = t[i] + t[n - 1 - i];
			mx = max(mx, sum);
		}
	}
	else {
		for (int i = 0; i < (n - 1) / 2; i++) {
			unsigned long long sum = t[i] + t[n - 2 - i];
			mx = max(mx, sum);
		}
		mx = max(mx, t[n - 1]);
	}

	cout << mx;
	return 0;
}
